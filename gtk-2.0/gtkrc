# by Si Yilin


#================== Color definitions ====================#

gtk-color-scheme = "white_color:#ffffff
lighter_color:#ededed
lighterB_color:#cdcdcd
base_color:#bababa
darkerB_color:#a5a5a5
grooveB_color: #6a6a6a
darkerC_color:#757575
black_color:#000000
entry_red_color: #d1b3b3
cyanA_color:#5c7cac
select_color:#5c7cac
"

#================== style ====================#

style "default-style"
{
   xthickness = 1
   ythickness = 1

   GtkWidget::focus-line-width = 1
   GtkRange::trough_border = 0
   GtkScrollbar::slider_width = 16
   GtkScrollbar::trough-border = 0
   GtkScrollbar::has-backward-stepper = 0
   GtkScrollbar::has-forward-stepper = 0
   GtkScrollbar::min-slider-length = 32
   GtkScrolledWindow::scrollbar-spacing = 0
   GtkScrolledWindow::scrollbars-within-bevel = 1
   GtkScale::slider_width = 12
   GtkScale::stepper_size = 5
   GtkScale::trough_border = 0
   GtkProgressBar::min-horizontal-bar-height = 6
   GtkProgressBar::min-vertical-bar-width    = 6
   GtkProgressBar::xspacing = 4
   GtkProgressBar::yspacing = 4
   GtkMenuBar::internal-padding = 0
   GtkMenu::horizontal-padding = 0
   GtkMenu::vertical-padding = 0
   GtkEntry::state-hint = 1
   GtkEntry::shadow_type = GTK_SHADOW_NONE
   GtkStatusbar::shadow_type = GTK_SHADOW_NONE
   GtkSpinButton::shadow_type = GTK_SHADOW_NONE
   GtkMenuBar::shadow-type = GTK_SHADOW_NONE
   GtkToolbar::shadow-type = GTK_SHADOW_NONE
   GtkButton::default_border = {0,0,0,0}
   GtkButton::default_outside_border = {0,0,0,0}

   bg[NORMAL] = @base_color
   bg[PRELIGHT] = @base_color
   bg[ACTIVE] = @darkerB_color
   bg[INSENSITIVE] = @base_color
   bg[SELECTED] = @select_color

   fg[NORMAL] = @black_color
   fg[PRELIGHT] = @black_color
   fg[ACTIVE] = @black_color
   fg[INSENSITIVE] = @grooveB_color
   fg[SELECTED] = @white_color

   base[NORMAL] = @lighterB_color
   base[PRELIGHT] = @lighterB_color
   base[ACTIVE] = @select_color
   base[INSENSITIVE] = @lighterB_color
   base[SELECTED] = @select_color
   
   text[NORMAL] = @black_color
   text[PRELIGHT] = @black_color
   text[ACTIVE] = @white_color
   text[INSENSITIVE] = @grooveB_color
   text[SELECTED] = @white_color
   
   # Draw frame around menu in a non-compositied environment
	# This needs to go before pixmap because we need to override some stuff
   # engine "adwaita" {}

}

style "button"
{

   engine "pixmap"
   {
       # LINES

      image 
      {
         function        = VLINE
         recolorable     = TRUE
         file        = "../gtk-2.0/assets/line-v.png"
         border          = { 0, 0, 0, 0 }
         stretch = TRUE
      }

      image 
      {
         function        = HLINE
         recolorable     = TRUE
         file        = "../gtk-2.0/assets/line-h.png"
         border          = { 0, 0, 0, 0 }
         stretch = TRUE
      }

      # CHECK BOXES

      image 
      {
         function        = CHECK
         state           = INSENSITIVE
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/checkbox4.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = INSENSITIVE
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/checkbox3.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = NORMAL
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/checkbox2.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = NORMAL
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/checkbox.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = ACTIVE
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/checkbox2.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = ACTIVE
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/checkbox.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = PRELIGHT
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/checkbox6.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = CHECK
         state           = PRELIGHT
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/checkbox5.png"
         overlay_stretch = FALSE
      }

      # OPTION BOXES

      image 
      {
         function        = OPTION
         state           = INSENSITIVE
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/option3.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = INSENSITIVE
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/option4.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = NORMAL
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/option2.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = NORMAL
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/option.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = ACTIVE
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/option2.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = ACTIVE
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/option.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = PRELIGHT
         shadow          = IN
         overlay_file        = "../gtk-2.0/assets/option6.png"
         overlay_stretch = FALSE
      }

      image 
      {
         function        = OPTION
         state           = PRELIGHT
         shadow          = OUT
         overlay_file        = "../gtk-2.0/assets/option5.png"
         overlay_stretch = FALSE
      }

      # REGULAR BUTTONS

      image
      {
         function        = BOX
         file        = "../gtk-2.0/assets/button2.png"
         state           = NORMAL
         border          = { 4, 4, 4, 4 }
         stretch         = TRUE
      }
      image
      {
         function        = BOX
         file        = "../gtk-2.0/assets/button2.png"
         state           = INSENSITIVE
         border          = { 4, 4, 4, 4 }
         stretch         = TRUE
      }
      image
      {
         function        = BOX
         file        = "../gtk-2.0/assets/button3.png"
         state 	         = PRELIGHT
         border          = { 4, 4, 4, 4 }
         stretch         = TRUE
      }
      image
      {
         function        = BOX
         file        = "../gtk-2.0/assets/button4.png"
         state           = ACTIVE
         border          = { 4, 4, 4, 4 }
         stretch         = TRUE
      }
   }
}

style "notebook" {

	xthickness = 5
	ythickness = 2

	engine "pixmap" {

		image {
			function = EXTENSION
			state = ACTIVE
			file = "../gtk-2.0/assets/tab-bottom.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = TOP
		}

		image {
			function = EXTENSION
			state = ACTIVE
			file = "../gtk-2.0/assets/tab-top.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = BOTTOM
		}

		image {
			function = EXTENSION
			state = ACTIVE
			file = "../gtk-2.0/assets/tab-left.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = RIGHT
		}

		image {
			function = EXTENSION
			state = ACTIVE
			file = "../gtk-2.0/assets/tab-right.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = LEFT
		}

		image {
			function = EXTENSION
			file = "../gtk-2.0/assets/tab-top-active.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = BOTTOM
		}

		image {
			function = EXTENSION
			file = "../gtk-2.0/assets/tab-bottom-active.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = TOP
		}

		image {
			function = EXTENSION
			file = "../gtk-2.0/assets/tab-left-active.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = RIGHT
		}

		image {
			function = EXTENSION
			file = "../gtk-2.0/assets/tab-right-active.png"
			border = { 3,3,3,3 }
			stretch = TRUE
			gap_side = LEFT
		}

		# How to draw boxes with a gap on one side (ie the page of a notebook)

		image {
			function = BOX_GAP
			file = "../gtk-2.0/assets/notebook.png"
			border = { 4, 4, 4, 4 }
			stretch = TRUE
			gap_file = "../gtk-2.0/assets/base_bg.png"
			gap_border = { 1, 1, 0, 0 }
			gap_side = TOP
		}

		image {
			function = BOX_GAP
			file = "../gtk-2.0/assets/notebook.png"
			border = { 4, 4, 4, 4 }
			stretch = TRUE
			gap_file = "../gtk-2.0/assets/base_bg.png"
			gap_border = { 1, 1, 0, 0 }
			gap_side = BOTTOM
		}

		image {
			function = BOX_GAP
			file = "../gtk-2.0/assets/notebook.png"
			border = { 4, 4, 4, 4 }
			stretch = TRUE
			gap_file = "../gtk-2.0/assets/base_bg.png"
			gap_border = { 0, 0, 1, 1 }
			gap_side = LEFT
		}

		image {
			function = BOX_GAP
			file = "../gtk-2.0/assets/notebook.png"
			border = { 4, 4, 4, 4 }
			stretch = TRUE
			gap_file = "../gtk-2.0/assets/base_bg.png"
			gap_border = { 0, 0, 1, 1 }
			gap_side = RIGHT
		}

		# How to draw the box of a notebook when it isnt attached to a tab

		image {
			function = BOX
			file = "../gtk-2.0/assets/notebook.png"
			border = { 4, 4, 4, 4 }
			stretch = TRUE
		}
	}
}

