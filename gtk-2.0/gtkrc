style "entry"
{
	xthickness = 6
	ythickness = 4

   engine "pixmap"
   {
      		image {
			function = SHADOW
			state = NORMAL
			detail = "entry"
			file = "../gtk-2.0/assets/entry.png"
			border = {6, 6, 6, 6}
			stretch = TRUE
		}
		
		image {
			function = SHADOW
			state = ACTIVE
			detail = "entry"
			file = "../gtk-2.0/assets/entry.png"
			border = {6, 6, 6, 6}
			stretch = TRUE
		}

		image {
			function = SHADOW
			state = INSENSITIVE
			detail = "entry"
			file = "../gtk-2.0/assets/entry-insensitive.png"
			border = {6, 6, 6, 6}
			stretch = TRUE
		}

		image {
			function = FLAT_BOX
			state    = INSENSITIVE
			detail   = "entry_bg"
			file     = "../gtk-2.0/assets/entry-bg-insensitive.png"
			stretch = TRUE
		}
		
		image {
			function = FLAT_BOX
			state    = ACTIVE
			detail   = "entry_bg"
			file     = "../gtk-2.0/assets/entry-bg.png"
			stretch = TRUE
		}

		image {
			function = FLAT_BOX
			detail   = "entry_bg"
			file     = "../gtk-2.0/assets/entry-bg.png"
			stretch = TRUE
		}
   }
}

